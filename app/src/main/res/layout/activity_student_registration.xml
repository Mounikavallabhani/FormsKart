<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentRegistration">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/greenbackground">

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="-250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_marginBottom="60dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/ralewaybold"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/ralewayregular"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="Please Create your account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/ralewayregular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full name"/>
                        <EditText
                            android:paddingRight="20dp"
                            android:text="Mounika"
                            android:drawableRight="@drawable/ic_create_black_24dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/ralewayregular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email Address"/>
                            <EditText
                                android:paddingRight="20dp"
                                android:text="mvallabhani@gmail.com"
                                android:drawableRight="@drawable/ic_mail_black_24dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/ralewayregular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mobile no."/>
                            <EditText
                                android:paddingRight="20dp"
                                android:text="0987654321"
                                android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/ralewayregular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Password"/>
                            <EditText
                                android:paddingRight="20dp"
                                android:text="Mounika"
                                android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:fontFamily="@font/ralewayregular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Confirm password"/>
                            <EditText
                                android:paddingRight="20dp"
                                android:text="Mounika"
                                android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/submitbutton"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
